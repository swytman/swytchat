%div{id:"att_file_container"}
 %div{type: 'button', id: 'btn_display_file', class: 'btn', "data-toggle" => 'collapse', :href => '#attach_file'}
  %i.icon-file

 %div{class: 'collapse', id: 'attach_file'}
  = form_for @attachfile, :url => attach_files_path(room_id: @room.id, user_id: current_user.id), :html => { :multipart => true, :method => :post } do |f|
   =fields_for :files do |f_i|
    =f_i.file_field :file 
    =f.submit "Отправить", class: "btn", id: "attach_send_btn"

       