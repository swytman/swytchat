<% provide(:title, 'Sign up') %>
<h1>Создать комнату</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @room, :html => {:autocomplete => "off"} do |f| %>
 <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, 'Название'%>
      <%= f.text_field :name, autofocus: true   %>
    
      <%= f.label :password, 'Пароль для входа в комнату'%>
      <%= f.password_field :password  %>

      <%= f.label :password_confirmation, "Подтверждение" %>
      <%= f.password_field :password_confirmation  %>

      <%= f.submit "Создать комнату", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>